---
interface Props {
	title: string
	meta?: Record<string, string>
	background?: string
}

const { title, meta, background } = Astro.props

if (!meta?.description && title != 'Page Not Found!') {
	console.warn('No description tag for page: title =', title)
}
const metaEntries = Object.entries(meta || {})
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />
		{metaEntries.map(([name, content]) => <meta {name} {content} />)}

		<!-- Google fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,100..900;1,100..900&family=Inconsolata:wght@200..900&dispay=swap"
			rel="stylesheet"
		/>

		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<title>{title} | tmthy.dev</title>
	</head>

	<body style={background && 'background: ' + background}>
		<div style="display: none">
			<h1>{title}</h1>
			<a href="https://github.com/flmng0">flmng0 at GitHub.com</a>
			<a href="https://www.linkedin.com/in/timothy-davis-dev">
				Timothy Davis on LinkedIn
			</a>
			<a href="mailto:tmthydvs@gmail.com">
				Contact me at tmthydvs@gmail.com
			</a>
		</div>

		<slot />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}

	html {
		overflow: hidden;
		--font-heading: 'Epilogue', serif;
		--font-body: 'Inconsolata', monospace;
	}

	body,
	html {
		width: 100%;
		height: 100%;
		margin: 0;
		padding: 0;
	}

	body {
		font-family: var(--font-heading);
		font-optical-sizing: auto;
		font-weight: normal;
		font-style: normal;
		letter-spacing: 0.035em;
	}

	button,
	a.button {
		border: 0;
		background: none;
		font-family: var(--font-body);
		font-weight: 600;
		font-size: 0.95rem;
		letter-spacing: 0.08em;
	}

	a {
		color: currentColor;
		text-decoration: none;
	}

	h1,
	h2,
	h3 {
		font-family: var(--font-body);
		font-optical-sizing: auto;
		font-style: normal;
	}

	h1 {
		font-size: 2rem;
		font-weight: 600;
		letter-spacing: 0.03em;
	}

	h2 {
		font-size: 1.7rem;
		font-weight: 600;
		letter-spacing: 0.03em;
	}

	h3 {
		font-size: 1.25rem;
		font-weight: 400;
	}
</style>
