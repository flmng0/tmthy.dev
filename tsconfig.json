{
	"compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
		"baseUrl": ".",
		"paths": {
            "$app/*": [".svelte-kit/dev/runtime/app/*", ".svelte-kit/build/runtime/app/*"],
            "$routes/*": ["src/routes/*"],
            "$components/*": ["src/components/*"],
            "$data/*": ["src/data/*"],
			"$lib/*": ["src/lib/*"],
		}
	},
	"include": ["src/**/*.js", "src/**/*.svelte", "src/lib/util.ts"],
    "exclude": ["node_modules/*", ".svelte-kit/*", "out/*"]
}
